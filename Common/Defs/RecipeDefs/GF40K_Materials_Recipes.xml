  <!-- Blocks + Steel -->
  <RecipeDef ParentName="GF40K_MakeFerrocreteBase">
    <defName>GF40K_Recipe_MakeFerrocreteBlocks</defName>
    <label>make ferrocrete from stone blocks</label>
    <description>Crush stone blocks and steel into ferrocrete.</description>
    <workAmount>700</workAmount>
    <ingredients>
	  <li>
		<filter>
		  <categories>
			<li>StoneBlocks</li>
		  </categories>
		</filter>
		<count>10</count>
	  </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
	<fixedIngredientFilter>
      <categories>
        <li>StoneBlocks</li>
      </categories>
      <disallowedThingDefs>
        <li>GF40K_Ferrocrete</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
	<defaultIngredientFilter>
      <categories>
        <li>StoneBlocks</li>
      </categories>
      <disallowedThingDefs>
        <li>GF40K_Ferrocrete</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>
    <products>
      <GF40K_Ferrocrete>20</GF40K_Ferrocrete>
    </products>
  </RecipeDef>
  
