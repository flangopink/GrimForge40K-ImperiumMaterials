<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--============================ Resource rocks ===============================-->

  <ThingDef ParentName="RockBase">
    <defName>GF40K_Mineable_Adamantium</defName>
    <label>adamantium ore</label>
    <description>Rock containing bits of adamantium.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(69,69,69)</color> <!-- nice -->
      <colorTwo>(48,48,48)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>8000</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>GF40K_Adamantium</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.03</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>2~5</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

